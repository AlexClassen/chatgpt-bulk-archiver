{
  "name": "ChatGPT Token Bulk Archiver",
  "version": "0.3.0",
  "manifest_version": 3,
  "description": "Easily save and back up your ChatGPT conversations by capturing tokens automatically and archiving chats in bulk.",

  "permissions": ["storage", "webRequest", "webRequestBlocking"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://api.openai.com/*",
    "https://auth.openai.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
